<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pme.mpe">

    <application
        android:name=".core.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/Theme.MPE">


        <activity
            android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MPE.NoActionBar"/>
        <activity
            android:name=".activities.TaskActivity.NewTaskActivity"
            android:theme="@style/Theme.MPE.NoActionBar">
        </activity>

        <activity
            android:name=".activities.CategoryActivity.NewCategoryActivity"
            android:theme="@style/Theme.MPE.NoActionBar">
        </activity>
        <activity
            android:name=".activities.CategoryActivity.EditCategoryActivity"
            android:theme="@style/Theme.MPE.NoActionBar">

        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>